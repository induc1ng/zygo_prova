<table class="table table-striped table-hover table-bordered" style="margin-top:50px;">
  <thead>
    <tr>
      <th><%= sort_link(@q, :title, "Title", default_order: :asc)%></th>
      <th><%= sort_link(@q, :author, "Author", default_order: :asc)%></th>
      <th><%= sort_link(@q, :image, "Description", default_order: :asc)%></th>
      <th><%= sort_link(@q, :description, "Image", default_order: :asc)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.image %></td>
        <td class="badge badge-dark"><%= link_to 'Show', book %></td>
        <% if current_user.admin == 1 %>
        <td class="badge badge-dark"><%= link_to 'Edit', edit_book_path(book) %></td>       
        <% end %>
         <% if current_user.admin == 1 %> 
        <td class="badge badge-dark"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>


  
</table>

